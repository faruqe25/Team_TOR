@model RestaurantManagementSystem.Areas.Admin.ViewModels.OfferVm
@{
    ViewData["Title"] = "AddNewOffer";
}
<style>
    #formdiv {
        background-color: ghostwhite;
        border-radius: 8px;
        box-shadow: 0 4px 6px 0 rgba(0,0,0,0.2),0 5px 6px 0 rgba(0,0,0,0.4);
        padding: 4%;
    }
        #formdiv h1 {
            text-align: center;
            padding: 4%;
        }

        #formdiv button {
            float: right;
        }

        #formdiv textarea {
            height: 15vh;
        }
</style>
<form class="row mt-5" asp-area="Admin" asp-controller="Home"
      asp-action="AddNewOffer" method="post">
    <div class="col-12 col-sm-12 col-md-10 offset-md-1 col-lg-8 offset-lg-2 col-xl-8" id="formdiv">
        @if (ViewBag.Validation != null)
        {
            <div id="mytoastr" class="alert alert-danger toast" role="alert">
                @ViewBag.Validation
            </div>
        }
        @if (ViewBag.Success != null)
        {
            <div id="mytoastr" class="alert alert-success toast" role="alert">
                @ViewBag.Success
            </div>
        }
        <h1>Add New Food Offer</h1>
        <div class="row">
            <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                <div class="form-group">
                    <label>Set the Coupon</label>
                    <input class="form-control" placeholder="e.g. Dx6He0P" asp-for="Coupon" />
                    <span asp-validation-for="Coupon" class="text-danger"></span>
                </div>
            </div>
            <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                <div class="form-group">
                    <label>Enter Discount Amount</label>
                    <input class="form-control" placeholder="Discount(%)" asp-for="Discount" />
                    <span asp-validation-for="Discount" class="text-danger"></span>
                </div>
            </div>
        </div>
        <div class="form-group">
            <label>Set the Validity</label>
            <div class="row">
                <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                    <div class="form-group">
                        <label>From:</label>
                        <input class="form-control" type="date" asp-for="ValidatyStart" />
                        <span asp-validation-for="ValidatyStart" class="text-danger"></span>
                    </div>
                </div>
                <div class="col-12 col-sm-6 col-md-6 col-lg-6 col-xl-6">
                    <div class="form-group">
                        <label>To:</label>
                        <input class="form-control" type="date" asp-for="ValidatyTo" />
                        <span asp-validation-for="ValidatyTo" class="text-danger"></span>
                    </div>
                </div>
            </div>
        </div>
        <button class="btn btn-dark">Add</button>
    </div>
</form>
@section Scripts{

    <script type="text/javascript">
         $(document).ready(function () {
                    $('#mytoastr').toast({ delay: 2000 });
                    $('#mytoastr').toast('show');
                });
    </script>
}
