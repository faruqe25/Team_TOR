
@{
    ViewData["Title"] = "SetMealHour";
}
<style>
    #formdiv {
        background-color: ghostwhite;
        border-radius:8px;
        box-shadow: 0 4px 6px 0 rgba(0,0,0,0.2),0 5px 6px 0 rgba(0,0,0,0.4);
        padding:4%;
    }
    #formdiv h1{
        text-align:center;
        padding:4%;
    }
    #formdiv button{
        float:right;
    }
</style>
<form class="row mt-5" asp-area="Admin"asp-controller="Home"
      asp-action="SetMealHour"method="post">
        <div class="col-7 col-sm-6 offset-sm-3 col-md-8 offset-md-2 col-lg-8 col-xl-8 offset-2"id="formdiv">
            <h1>Set Meal Hour</h1>
            <div class="form-group">
                <label>Enter Meal Hour Title</label>
                <input class="form-control" placeholder="Meal Hour" />
            </div>
            <div class="form-group">
                <label>Enter Title</label>
                <input class="form-control" placeholder="Title" />
            </div>
            <button class="btn btn-dark">Add</button>
        </div>
</form>
