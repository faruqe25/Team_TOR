@model X.PagedList.IPagedList<RestaurantManagementSystem.Areas.Manager.ViewModels.TempSell>
@using X.PagedList.Mvc.Core
@using X.PagedList
@{
    ViewData["Title"] = "TotalSells";
}

<style>
    #cols {
        background-color: ghostwhite;
        border-radius: 8px;
        box-shadow: 0 4px 6px 0 rgba(0,0,0,0.2),0 5px 6px 0 rgba(0,0,0,0.4);
    }

        #cols h1 {
            text-align: center;
            padding: 4%;
        }

    table {
        text-align: center;
    }
</style>
<div class="row mt-5">
    <div class="col-12 col-sm-12 col-md-12 col-lg-10 offset-lg-1 col-xl-10 offset-xl-1" id="cols">
        <h1>Total Sells Record Data Wise </h1>
        <table class="table">
            <thead>
                <tr>
                    <th>Serial</th>
                    <th>Date</th>
                    <th>Quantity (Item)</th>
                    <th>Total Sell</th>
                </tr>
            </thead>
            <tbody>
                @{ var c = 1;}
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@c</td>
                        <td>@item.Date.ToShortDateString()</td>
                        <td>@item.Quantity</td>
                        <td>@item.Total </td>
                    </tr>
                    c++;
                }
            </tbody>
        </table>

        @Html.PagedListPager((IPagedList)Model, c => Href("~/Admin/Home/TotalSells?page=" + c),
                new X.PagedList.Mvc.Common.PagedListRenderOptionsBase
                {
                    PageClasses = new string[] { "page-link" },
                    UlElementClasses = new string[] { "pagination" },
                    LiElementClasses = new string[] { "page-item" },

                })
    </div>
</div>

