
@{
    ViewData["Title"] = "UpdateIngredient";
}




@model RestaurantManagementSystem.Areas.Admin.ViewModels.IngredientVm

<style>
    #formdiv {
        background-color: ghostwhite;
        border-radius: 8px;
        box-shadow: 0 4px 6px 0 rgba(0,0,0,0.2),0 5px 6px 0 rgba(0,0,0,0.4);
        padding: 4%;
    }

        #formdiv h1 {
            text-align: center;
            padding: 4%;
        }

        #formdiv button {
            float: right;
        }
</style>
<form class="row mt-5" asp-area="Admin" asp-controller="Home"
      asp-action="UpdateIngredient" method="post">
    <div class="col-7 col-sm-6 offset-sm-3 col-md-8 offset-md-2 col-lg-8 col-xl-8 offset-2" id="formdiv">
        <h1>Update Ingredient Name</h1>
        <div class="form-group">
            <label>Enter Ingredient Name </label>
            <input type="hidden" asp-for="IngredientId" />
            <input class="form-control" placeholder="Ingredient Hour" asp-for="IngredientName" />
            <span asp-validation-for="IngredientName" class="text-danger"></span>
        </div>

        <button class="btn btn-dark">Update</button>
    </div>
</form>

@section Scripts{

    <script type="text/javascript">
         //$(document).ready(function () {
         //           $('#mytoastr').toast({ delay: 2000 });
         //           $('#mytoastr').toast('show');
         //       });
        var a = null;
         $(document).ready(function () {

             a ="@ViewBag.Validation"
             console.log(a);
             if (a.length !== 0) {
                 Swal.fire({
                     position: 'top-center',
                     icon: 'warning',
                     title: a,
                     showConfirmButton: false,
                     timer: 2000
                 })
             }
         });
    </script>
}

