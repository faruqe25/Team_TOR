
@{
    ViewData["Title"] = "UpdateMealHour";
}

@model RestaurantManagementSystem.Areas.Admin.ViewModels.MealHourVm

<style>

    #formdiv {
        background-color: ghostwhite;
        border-radius: 8px;
        box-shadow: 0 4px 6px 0 rgba(0,0,0,0.2),0 5px 6px 0 rgba(0,0,0,0.4);
        padding: 4%;
    }

        #formdiv h1 {
            text-align: center;
            padding: 4%;
        }

        #formdiv button {
            float: right;
        }
</style>
<form class="row mt-5" asp-area="Admin" asp-controller="Home"
      asp-action="UpdateMealHour" method="post">
    <div class="col-7 col-sm-6 offset-sm-3 col-md-8 offset-md-2 col-lg-8 col-xl-8 offset-2" id="formdiv">
        @if (ViewBag.Validation != null)
        {
            <div id="mytoastr" class="alert alert-danger toast" role="alert">
                @ViewBag.Validation
            </div>
        }
        <h1>Set Meal Hour</h1>
        <div class="form-group">
            <label>Enter Meal Hour Title</label>
            <input class="form-control" placeholder="Meal Hour" asp-for="MealHourTitle" />
            <input type="hidden" asp-for="MealHourId" />
            <span asp-validation-for="MealHourTitle" class="text-danger"></span>
        </div>

        <button class="btn btn-dark">Update</button>
    </div>
</form>

@section Scripts{

    <script type="text/javascript">
         $(document).ready(function () {
                    $('#mytoastr').toast({ delay: 2000 });
                    $('#mytoastr').toast('show');
                });
    </script>
}
