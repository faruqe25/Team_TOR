@model X.PagedList.IPagedList<RestaurantManagementSystem.Areas.StockManager.ViewModels.StockDetailsVm>
@using X.PagedList.Mvc.Core
@using X.PagedList
@{
    ViewData["Title"] = "StockDetails";
}
<style>

    #cols {
        background-color: ghostwhite;
        border-radius: 8px;
        box-shadow: 0 4px 6px 0 rgba(0,0,0,0.2),0 5px 6px 0 rgba(0,0,0,0.4);
    }

        #cols h1 {
            text-align: center;
            padding: 4%;
        }

    table {
        text-align: center;
    }
</style>
<div class="row mt-5">
    <div class="col-12 col-sm-12 col-md-12 col-lg-10 offset-lg-1 col-xl-10 offset-xl-1" id="cols">
        <h1>Stock Details</h1>
        <div class="table-responsive">
            <table class="table table-sm">
                <thead>
                    <tr>
                        <th>Serial</th>
                        <th>Ingredient</th>
                        <th>Quantity (Kg or Ltr)</th>
                        <th>Stock-in Date</th>
                        <th>Available (Kg or Ltr)</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Serial</td>
                            <td>@item.IngredientName</td>
                            <td>@item.Quantity</td>
                            <td>@item.StockInDate.ToShortDateString()</td>
                            <td>@item.AvailableStock</td>
                            <td>
                                <a asp-action="UpdateStock" asp-controller="Home" asp-area="StockManager"
                                   asp-route-id="@item.StockDetailsId">
                                    <i class="fas fa-pencil-alt"
                                       style="color:forestgreen"></i>
                                </a> &nbsp;&nbsp;&nbsp;

                            </td>
                        </tr>
                    }
                </tbody>
            </table>
            @Html.PagedListPager((IPagedList)Model, c => Href("~/StockManager/Home/StockDetails?page=" + c),
               new X.PagedList.Mvc.Common.PagedListRenderOptionsBase
               {
                   PageClasses = new string[] { "page-link" },
                   UlElementClasses = new string[] { "pagination" },
                   LiElementClasses = new string[] { "page-item" },

               })
        </div>
    </div>
</div>

