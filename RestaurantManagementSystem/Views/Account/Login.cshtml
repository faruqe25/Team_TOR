@{
    Layout = null;
    ViewData["Title"] = "Login";
}
@model RestaurantManagementSystem.Areas.Customer.ViewModels.Login
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Resturant Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LoginStyleSheet.css" />
</head>
<body>
    <div id="holder">

        <form asp-action="Login" asp-area="" asp-controller="Account" method="post" class="col-10 offset-1 col-sm-10 offset-sm-1 col-md-8 offset-md-2 col-lg-5 offset-lg-6 col-xl-5 offset-xl-6">
            <h2>Login Here</h2>
            <hr />
            <div class="form-group col-lg-10 offset-lg-1 col-xl-8 offset-xl-2">
                <label>Enter Username</label>
                <input placeholder="Username" class="form-control" asp-for="Email" />
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group col-lg-10 offset-lg-1 col-xl-8 offset-xl-2">
                <label>Enter Password</label>
                <input asp-for="Password" placeholder="Password" type="password" class="form-control" />
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>
            <button class="btn btn-dark" style="float:right;" type="submit">Login</button>
        </form>
    </div>
    <script src="~/Assets/AJAX/ajaxjQueryjquery1.11.3.min.js"></script>
    <script src="~/Assets/AJAX/ajaxjqueryvalidate1.14.0jquery.validate.min.js"></script>
    <script src="~/Assets/AJAX/jquery.validate.unobtrusive.min.js"></script>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/SweetAlert/sweetalert2.all.min.js" asp-append-version="true"></script>
    <script type="text/javascript">

         var a = null;

         $(document).ready(function () {

             a ="@ViewBag.Message"

             if (a.length !== 0) {

                 Swal.fire({
                     icon: 'error',
                     title: 'Oops...',
                     text: a,
                     footer: 'Contact with adminstrator !',
                     timer: 3000,
                     showConfirmButton: false,
                 })

             }

         });
    </script>
</body>
</html>