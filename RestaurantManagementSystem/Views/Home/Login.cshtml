
@{
    Layout = null;
    ViewData["Title"] = "Login";
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Resturant Management System</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/LoginStyleSheet.css" />
</head>
<body>
       <div id="holder">
           <form style=" background-color:mediumpurple;float:right;" class="col-lg-6 col-xl-6 mt-5 mr-lg-5 mr-xl-5">
               <h2>Login Here</h2>
               <div class="form-group col-lg-6 col-xl-6">
                   <label>Enter UserId</label>
                   <input placeholder="UserId" class="form-control" />
               </div>
               <div class="form-group col-lg-6 col-xl-6">
                   <label>Enter Password</label>
                   <input placeholder="Password" type="password" class="form-control" />
               </div>
               <div class="form-group">
                   <button class="btn btn-dark">Login</button>
               </div>
           </form>
       </div>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
</body>
</html>